{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "trailingSlash": false,

  "redirects": [
    {
      "source": "https://www.tradecertify.com.au/:path*",
      "destination": "https://tradecertify.com.au/:path*",
      "permanent": true
    },

    { "source": "/services", "destination": "/#services", "permanent": true },
    { "source": "/contact",  "destination": "/#contact",  "permanent": true },
    { "source": "/category/:slug*", "destination": "/resources/:slug*", "permanent": true },
    { "source": "/blog/:slug*",     "destination": "https://blog.tradecertify.com.au/:slug*", "permanent": true }
  ],

  "rewrites": [
    { "source": "/((?!.*\\.).*)", "destination": "/" }
  ],

  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Strict-Transport-Security", "value": "max-age=31536000; includeSubDomains; preload" }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ]
}
